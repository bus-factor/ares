{
  "name": "bus-factor/ares",
  "description": "Leightweight standalone validation library",
  "type": "library",
  "archive": {
    "exclude": [
      "/.gitattributes",
      "/.gitignore",
      "/.travis.yml",
      "/phpunit.xml",
      "/tests"
    ]
  },
  "keywords": [
    "form",
    "form-validation",
    "forms",
    "request",
    "secure",
    "security",
    "stand-alone",
    "standalone",
    "valid",
    "validate",
    "validation",
    "validator"
  ],
  "support": {
    "issues": "https://github.com/bus-factor/ares/issues"
  },
  "readme": "README.md",
  "license": "MIT",
  "authors": [
    {
      "name": "Michael LeÃŸnau",
      "email": "michael.lessnau@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Ares\\": "src/Ares"
    }
  },
  "require-dev": {
    "phpunit/phpunit": ">=5.7"
  },
  "require": {
    "php": "^8.1",
    "ext-json": "*",
    "bus-factor/ddd": "^5.0"
  },
  "scripts": {
    "test": "phpunit",
    "test:cov:text": [
      "@putenv XDEBUG_MODE=coverage",
      "phpunit --coverage-text=php://stdout"
    ],
    "test:cov:html": [
      "@putenv XDEBUG_MODE=coverage",
      "phpunit --coverage-html=coverage"
    ]
  }
}
